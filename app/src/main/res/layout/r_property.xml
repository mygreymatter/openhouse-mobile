<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="5dp">

    <ImageView android:id="@+id/property_thumb"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="10dp"
               android:src="@mipmap/ic_launcher"/>

    <TextView android:id="@+id/openhouse_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/property_thumb"
              android:gravity="left"
              android:layout_marginLeft="5dp"
              android:text="OpenHouse Event"
              android:textSize="20sp"/>

    <TextView android:id="@+id/openhouse_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/property_thumb"
              android:layout_toRightOf="@+id/property_thumb"
              android:layout_marginLeft="5dp"
              android:maxLength="20"
              android:text="33rd cross, 10th main, 4th block, Jayanagar"
              android:textSize="15sp"/>

    <TextView android:id="@+id/by_user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/openhouse_name"
              android:layout_marginRight="5dp"
              android:gravity="right|bottom"
              android:layout_alignParentRight="true"
              android:layout_alignBottom="@+id/property_thumb"
              android:text="mayo"
              android:textSize="15sp"/>

</RelativeLayout>