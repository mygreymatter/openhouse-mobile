<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            tools:context="com.mayo.openhouse.openhouse.FragPropertyDetails">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView android:id="@+id/property_full_image"
                                  android:layout_width="match_parent"
                                  android:layout_height="270dp"
                                  android:adjustViewBounds="true"
                                  android:scaleType="centerCrop"
                                  android:src="@drawable/ic_placeholder_property"/>
        <TextView
            android:id="@+id/property_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_full_image"
            android:gravity="center"
            android:padding="10dp"
            android:text="Property Title"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/property_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_title"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_facing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_category"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_facing"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_floors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_description"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_floors"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_parking"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_price_negotiable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_price"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_price_negotiable"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/property_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_location"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="Category: Residential"
            android:textSize="15sp"/>

    </RelativeLayout>

</ScrollView>
